<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<Scene stylesheets="Cart.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="A_Client.Graphics.Pages.Cart">
    <AnchorPane prefHeight="745" prefWidth="1134">
        <Pane layoutX="18.0" layoutY="19.0" prefHeight="707.0" prefWidth="1963.0">
            <TableView fx:id="cart_Table" layoutX="574.0" layoutY="39.0" prefHeight="431.0" prefWidth="937.0"
                       stylesheets="@Cart.css">
                <columns>
                    <TableColumn fx:id="inc_dec_product" prefWidth="174.5999755859375" text=" افزودن تعداد"/>
                    <TableColumn fx:id="product_f_price" prefWidth="105.4000244140625" text="قیمت نهایی"/>
                    <TableColumn fx:id="product_number" prefWidth="54.20001220703125" text="تعداد"/>
                    <TableColumn fx:id="product_price" prefWidth="78.60003662109375" text="قیمت"/>
                    <TableColumn fx:id="product_image" prefWidth="394.79998779296875" text="عکس"/>
                    <TableColumn fx:id="Product_name" minWidth="0.0" prefWidth="131.5999755859375" text="نام محصول"/>
                </columns>
            </TableView>

            <Pane layoutX="575.0" layoutY="478.0" prefHeight="210.0" prefWidth="937.0">
                <MediaView fx:id="cartGif" fitHeight="200.0" fitWidth="200.0" layoutX="14.0" layoutY="5.0"/>

                <Button alignment="CENTER_RIGHT" layoutX="767.0" layoutY="69.0" mnemonicParsing="false"
                        onAction="#purchase" prefHeight="41.0" prefWidth="106.0" styleClass="buy"
                        stylesheets="@Cart.css" text="خرید">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
                <ImageView fitHeight="34.0" fitWidth="38.0" layoutX="776.0" layoutY="73.0" pickOnBounds="true"
                           preserveRatio="true">
                    <Image url="@icons8-get-cash-48.png"/>
                </ImageView>
                <Button alignment="CENTER_RIGHT" layoutX="712.0" layoutY="144.0" mnemonicParsing="false"
                        prefHeight="38.0" prefWidth="223.0" styleClass="back" stylesheets="@Cart.css"
                        text="بازگشت به منو اصلی">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
                <ImageView fitHeight="34.0" fitWidth="34.0" layoutX="717.0" layoutY="150.0" pickOnBounds="true"
                           preserveRatio="true">
                    <Image url="@icons8-go-back-48.png"/>
                </ImageView>
                <MediaView fx:id="cartGif1" fitHeight="200.0" fitWidth="200.0" layoutX="14.0" layoutY="3.0"/>
                <Label fx:id="totalPrice" alignment="CENTER" layoutX="751.0" layoutY="20.0" prefHeight="34.0"
                       prefWidth="145.0" text="قیمت نهایی" textFill="#138a1e">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
            </Pane>
        </Pane>
    </AnchorPane>
</Scene>
